<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.yes.MainHomeActivity$MainHomeFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="animateIntent"
        android:src="@drawable/profile_pic1"
        android:transitionName="profilepic"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true" />

    <TextView
        android:id="@+id/display_uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Age_Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_uname"
        android:layout_margin="3dip"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="@string/age_place"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />
    <!--

        <com.example.vivek.yes.CustomTextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_toRightOf="@+id/profile_pic"
            android:paddingTop="5dp"
            android:text="@string/user_name"
            android:textColor="#000"
            android:textSize="18dp" />
    -->

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/intro_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/profile_pic"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/intro_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/orange_arrow"
                android:tint="@color/photo_tint" />

            <TextView
                android:id="@+id/intro_banner_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/intro_text"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recent_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/intro_card"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recentImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic1"
                android:tint="@color/photo_tint" />

            <TextView
                android:id="@+id/recentName"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="openRecentServices"
                android:text="@string/title_activity_recent_services"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
