<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.yes.MainHomeActivity$MainHomeFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="animateIntent"
        android:src="@drawable/profile_pic1"
        android:transitionName="profilepic"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true" />

    <TextView
        android:id="@+id/display_uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Age_Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_uname"
        android:layout_margin="3dip"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="@string/age_place"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />
    <!--

        <com.example.vivek.yes.CustomTextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_toRightOf="@+id/profile_pic"
            android:paddingTop="5dp"
            android:text="@string/user_name"
            android:textColor="#000"
            android:textSize="18dp" />
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_pic">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/profile_pic"
            android:onClick="openRecentServices"
            card_view:cardCornerRadius="4dp">
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_pic"
            android:text="Recent Activities"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </FrameLayout>

</RelativeLayout>
