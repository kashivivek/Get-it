<resources>>
    <style name="AppTheme" parent="AlertDialog.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.appcompat.light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@android:drawable/ic_menu_rotate</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="android:color">@color/accent</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
</resources>
